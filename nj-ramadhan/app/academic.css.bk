:root{
  --bg:#ffffff;
  --text:#222;
  --muted:#6b7280;
  --accent:#0b61ff;
  --container-max:1100px;
  --radius:8px;
  --code-bg:#f6f8fa;
  --mono: ui-monospace, SFMono-Regular, Menlo, Monaco, "Roboto Mono", "Courier New", monospace;
  --sans: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
  --base-font:16px;
  --scale-ratio:1.125;
}

/* Reset & base */
*{box-sizing:border-box}
html,body{height:100%}
body{
  margin:0;
  font-family:var(--sans);
  font-size:var(--base-font);
  line-height:1.6;
  color:var(--text);
  background:var(--bg);
  -webkit-font-smoothing:antialiased;
  -moz-osx-font-smoothing:grayscale;
  -webkit-text-size-adjust:100%;
}

/* Layout container */
.container{
  width:100%;
  max-width:var(--container-max);
  margin:0 auto;
  padding:1.25rem;
}

/* Header */
.site-header{
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:1rem;
  padding:1rem 0;
  border-bottom:1px solid #eef2f7;
  background:transparent;
}
.site-title{
  font-weight:700;
  font-size:1.25rem;
  letter-spacing:-0.01em;
  color:var(--text);
  text-decoration:none;
}
.site-sub{
  display:block;
  color:var(--muted);
  font-size:0.9rem;
  margin-top:0.125rem;
}

/* Navigation */
.nav{
  display:flex;
  gap:0.75rem;
  align-items:center;
}
.nav a{
  color:var(--muted);
  text-decoration:none;
  padding:0.4rem 0.6rem;
  border-radius:6px;
  font-size:0.95rem;
}
.nav a:hover{color:var(--text); background:#f7f9fc}

/* Main & columns */
.main{
  display:flex;
  gap:2rem;
  margin-top:1.5rem;
  align-items:flex-start;
}
.content{
  flex:1 1 0;
  min-width:0;
}
.sidebar{
  width:300px;
  max-width:30%;
  flex:0 0 300px;
}

/* Article */
.article{
  padding:1rem 0;
}
.article h1{font-size:1.75rem; margin:0 0 0.5rem}
.article h2{font-size:1.25rem; margin:1.25rem 0 0.5rem}
.article p{margin:0 0 0.9rem}
.article img{max-width:100%; height:auto; display:block; margin:0.6rem 0}

/* Cards */
.card{
  background:#fff;
  border:1px solid #eef2f7;
  border-radius:var(--radius);
  padding:0.9rem;
  box-shadow:0 1px 0 rgba(16,24,40,0.02);
}

/* Utilities */
.small{font-size:0.9rem;color:var(--muted)}
.lead{font-size:1.05rem;color:var(--muted);margin-bottom:1rem}

/* Lists */
ul,ol{margin:0 0 1rem 1.25rem}
li{margin:0.35rem 0}

/* Links */
a{color:var(--accent)}
a:hover{text-decoration:underline}

/* Code & pre */
code{
  font-family:var(--mono);
  background:var(--code-bg);
  padding:0.12rem 0.36rem;
  border-radius:6px;
  font-size:0.92em;
}
pre{
  font-family:var(--mono);
  background:var(--code-bg);
  padding:1rem;
  border-radius:8px;
  overflow:auto;
  margin:0 0 1rem;
  font-size:0.9rem;
}

/* Tables */
table{
  width:100%;
  border-collapse:collapse;
  margin:0 0 1rem;
}
th,td{
  border:1px solid #eef2f7;
  padding:0.6rem 0.75rem;
  text-align:left;
}
th{background:#fbfcfe;font-weight:600}

/* Responsive tweaks */
@media (max-width:900px){
  .main{flex-direction:column}
  .sidebar{width:100%;max-width:100%}
  .site-header{padding:0.75rem 0}
}

/* Footer */
.site-footer{
  margin-top:2.5rem;
  padding:1.5rem 0;
  border-top:1px solid #eef2f7;
  color:var(--muted);
  font-size:0.95rem;
  text-align:center;
}

/* Accessibility helpers */
.sr-only{
  position:absolute!important;
  height:1px;width:1px;
  overflow:hidden;clip:rect(1px,1px,1px,1px);
  white-space:nowrap;border:0;padding:0;margin:-1px;
}